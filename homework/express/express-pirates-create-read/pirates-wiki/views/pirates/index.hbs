<h1>Pirates!</h1>

<ul>
    {{#each pirates}}
        <li>
            <a href="/pirates/{{@index}}"><h2>{{this.name}}</h2></a>
        </li>
        <div>
            <a href="/pirates/{{@index}}/edit">Edit</a>
        </div>
        <br>
        <form action="/pirates/{{@index}}?_method=DELETE" method="POST">
            <input type="submit" value="DELETE">
        </form>
        <hr>
    {{/each}}
</ul>
<a href="/pirates/new">Create a new Pirate</a>

